{
  "name": "sanctuary-api",
  "version": "1.0.5",
  "description": "Sanctuary API",
  "main": "dist",
  "type": "module",
  "scripts": {
    "dev": "nodemon -w src --exec \"babel-node src\"",
    "migrate": "node -r dotenv/config ./node_modules/knex/bin/cli.js migrate:latest",
    "lint": "./node_modules/.bin/eslint --max-warnings 0 .",
    "pretty": "./node_modules/.bin/prettier --check src/**/*.js",
    "build": "babel src -s -D -d dist",
    "start": "pm2-dev --interpreter babel-node src",
    "start:dev": "npm run migrate && npm start",
    "test": "mocha 'src/**/*.test.js' --require esm",
    "coverage": "nyc npm test",
    "serve": "pm2 start dist",
    "seed": "node -r dotenv/config ./node_modules/knex/bin/cli.js seed:run"
  },
  "license": "MIT",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "body-parser": "^1.13.3",
    "compression": "^1.5.2",
    "cors": "^2.7.1",
    "cron": "^3.1.7",
    "dotenv": "^8.2.0",
    "express": "^4.13.3",
    "express-jwt": "^8.4.1",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "moment": "^2.29.0",
    "moment-timezone": "^0.5.32",
    "morgan": "^1.10.0",
    "mustache": "^3.2.1",
    "mysql": "^2.1.0",
    "node-cron": "^2.0.3",
    "nodemon": "^3.1.7",
    "pm2": "^5.4.2",
    "resource-router-middleware": "^0.6.0",
    "twilio": "^5.3.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/node": "^7.10.5",
    "@babel/plugin-proposal-optional-chaining": "^7.11.0",
    "@babel/preset-env": "^7.11.5",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.21",
    "@types/hapi__joi": "^17.1.14",
    "@types/morgan": "^1.9.9",
    "@types/sinon": "^17.0.3",
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-mocha": "^8.0.0",
    "mocha": "^10.7.3",
    "node-random-name": "^1.0.1",
    "nyc": "^15.1.0",
    "prettier": "2.1.2",
    "proxyquire": "^2.1.3",
    "sinon": "^9.1.0",
    "supertest": "^6.0.1"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "es6": true,
      "mocha": true
    },
    "overrides": [
      {
        "files": [
          "./src/**/*.js"
        ],
        "parser": "babel-eslint",
        "parserOptions": {
          "babelOptions": {
            "configFile": "./babel.config.js"
          }
        }
      }
    ],
    "plugins": [
      "mocha"
    ]
  }
}
